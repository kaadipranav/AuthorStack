# ===========================================
# AuthorStack Environment Variables Template
# ===========================================
# Copy this file to .env.local and fill in your values
# Never commit .env.local to version control!

# App Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_APP_NAME=AuthorStack
NODE_ENV=development

# ===========================================
# DATABASES
# ===========================================

# MongoDB Atlas (Primary App Data)
# Get from: https://cloud.mongodb.com
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DB_NAME=authorstack

# Azure PostgreSQL (Analytics & Time-Series)
# Get from: https://portal.azure.com
DATABASE_URL=postgresql://username:password@server.postgres.database.azure.com:5432/authorstack?sslmode=require
POSTGRES_POOL_SIZE=10

# Appwrite (Auth & Realtime)
# Get from: https://cloud.appwrite.io
NEXT_PUBLIC_APPWRITE_ENDPOINT=https://cloud.appwrite.io/v1
NEXT_PUBLIC_APPWRITE_PROJECT_ID=your_project_id
APPWRITE_API_KEY=your_api_key

# Upstash Redis (Cache & Rate Limiting)
# Get from: https://console.upstash.com
UPSTASH_REDIS_REST_URL=https://your-redis.upstash.io
UPSTASH_REDIS_REST_TOKEN=your_redis_token

# ===========================================
# STORAGE
# ===========================================

# DigitalOcean Spaces (File Storage)
# Get from: https://cloud.digitalocean.com/spaces
DO_SPACES_ENDPOINT=https://nyc3.digitaloceanspaces.com
DO_SPACES_BUCKET=authorstack-assets
DO_SPACES_KEY=your_spaces_key
DO_SPACES_SECRET=your_spaces_secret
NEXT_PUBLIC_CDN_URL=https://authorstack-assets.nyc3.cdn.digitaloceanspaces.com

# ===========================================
# AI SERVICES
# ===========================================

# OpenRouter (AI Provider)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-v1-your_openrouter_key

# ===========================================
# PAYMENTS
# ===========================================

# Stripe
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ===========================================
# MONITORING
# ===========================================

# Sentry (Error Tracking)
# Get from: https://sentry.io
SENTRY_DSN=https://your_key@o123456.ingest.sentry.io/123456
SENTRY_AUTH_TOKEN=your_sentry_auth_token

# ===========================================
# SECRETS
# ===========================================

# Cron Job Authentication
# Generate with: openssl rand -hex 32
CRON_SECRET=your_cron_secret_here

# JWT Secret (Backup Auth)
# Generate with: openssl rand -hex 64
JWT_SECRET=your_jwt_secret_here
